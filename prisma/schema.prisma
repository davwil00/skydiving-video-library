datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id            String       @id @default(cuid())
  date          DateTime
  name          String?
  flights       Flight[]
  Competition   Competition? @relation(fields: [competitionId], references: [id])
  competitionId String?
  total_score   Int?
}

model Flight {
  id           String            @id @default(cuid())
  session      Session           @relation(fields: [sessionId], references: [id])
  sessionId    String
  flyers       Flyer[]
  formations   FlightFormation[]
  sideVideoUrl String?
  topVideoUrl  String?
  scores       Score[]
}

model Score {
  id        String @id @default(cuid())
  flight    Flight @relation(fields: [flightId], references: [id])
  flightId  String
  formation String
  score     Int
  order     Int
}

model Flyer {
  name    String   @id
  flights Flight[]
}

model FlightFormation {
  flight      Flight @relation(fields: [flightId], references: [id])
  flightId    String // relation scalar field (used in the `@relation` attribute above)
  formationId String
  order       Int

  @@id([flightId, formationId, order])
}

model SoloSession {
  id       String       @id @default(cuid())
  date     DateTime
  duration Int
  notes    String
  skills   String
  flights  SoloFlight[]
}

model SoloFlight {
  id              String      @id @default(cuid())
  solo_session    SoloSession @relation(fields: [solo_session_id], references: [id])
  solo_session_id String
  videoUrl        String
}

model Competition {
  id        String    @id @default(cuid())
  startDate DateTime
  endDate   DateTime
  name      String
  location  String
  sessions  Session[]
  rank      Int?
}
